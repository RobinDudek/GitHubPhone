<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.heisenbear.githubphone.repo.RepoFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:height="52px"
            android:text="Nom du repo"
            android:textColor="@color/colorPrimary"
            android:textSize="46px" />


        <TextView
            android:id="@+id/owner"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:text="Pseudo"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/name"
            android:layout_toEndOf="@+id/owner"
            android:layout_weight="1"
            android:text="Location" />

        <TextView
            android:id="@+id/repoFolders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/owner"
            android:layout_marginTop="77dp"
            android:text="Ici les fichiers du repo dans lesquels on peut naviguer"
            android:textAlignment="center"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</FrameLayout>
